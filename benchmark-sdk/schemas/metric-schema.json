    "memoryPssKb": {
      "category": "memory",
      "displayName": "Memory PSS",
      "unit": "KB",
      "lowerIsBetter": true,
      "description": "Proportional Set Size - actual memory used by process",
      "detailedInfo": "PSS (Proportional Set Size) represents the actual RAM used by your app, including shared memory proportionally divided among processes. This is the most accurate measure of your app's memory footprint from the system's perspective.",
      "goodExample": "30-50 MB: Excellent - Lightweight app, low memory pressure",
      "badExample": "150 MB+: Poor - Heavy memory usage, risk of being killed on low-memory devices",
      "thresholds": {
        "good": 50000,
        "warning": 100000,
        "critical": 200000
      }
    },
    "memoryUsedBytes": {
